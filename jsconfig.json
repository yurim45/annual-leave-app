{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "@assets": ["./src/assets/*"],
      "@components": ["./src/components/*"],
      "@util": ["./src/util/*"],
      "@store": ["./src/store/*"],
      "@views": ["./src/views/*"],
      "@graphql": ["./src/graphql/*"],
      "@constants": ["./src/constants/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  }
}
